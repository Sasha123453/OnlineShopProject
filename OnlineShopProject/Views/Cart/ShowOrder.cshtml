*@
@{
}
<div class="row">
    <div class="col-5 card shadow-lg">
        <h4>Ваш заказ</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Кол-во</th>
                    <th>Стоймость</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.Items)
                {
                    <tr>
                        <td>@x.Product.Name</td>
                        <td>@x.Product.Price</td>
                        <td>@x.Amount</td>
                        <td>@x.Cost</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end">Общая стоймость: @Model.Cost</div>
    </div>
    <div class="col-6 card shadow-lg">
        <form asp-action="CreateOrder" asp-controller="Cart" method="post">
            <div class="form-group">
                <label for="name">Полное имя</label>
                <input type="text" id="name" name="name"/>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email"/>
            </div>
            <div class="form-group">
                <label for="number">Номер</label>
                <input type="number" id="number" name="number" />
            </div>
            <div class="form-group">
                <label for="city">Город</label>
                <input type="text" id="city" name="city"/>
            </div>
            <div class="text-center">
                <a type="submit" class="btn btn-lg" href="/product/productspage">Продолжить покупки</a>
                <input type="submit" class="btn btn-lg">Оформить заказ</input>
            </div>
        </form>
    </div>
</div>