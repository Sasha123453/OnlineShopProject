@model DeliveryInfoPageViewModel
<div>
    <a href="/addresses/create">Добавить адрес</a>
</div>
@if (Model == null)
{
    <h3>Адресов нет</h3>
}
else
{
    <section>
        @foreach (var x in Model.Items)
        {
            <div class="@(x.Id == Model.CurrentId) ? "current_item" : "">
                <div>
                    <p>@x.FullName</p>
                    <p>@x.PhoneNumber</p>
                </div>
                <p>@x.Address</p>
                <div>
                    <a href="/addresses/edit?id=@x.Id">Изменить</a>
                    <a href="/addresses/delete?id=@x.Id">Удалить</a>
                </div>
            </div>
        }
    </section>
}